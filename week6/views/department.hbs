    <head>
        <link href="../site.css" rel="stylesheet">
    </head>


<div class="row">
    <div class="col-md-12">{{#each data}}
        <h2>{{this.departmentName}} - Department: {{ this.departmentId}}</h2>

        <hr />

        <form method="post" action="/department/update">

            <input type="hidden" name="departmentId" value="{{this.departmentId}}" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">Department Name:</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{this.departmentName}}" />
                        </div>
                    </div>
                </div>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>{{/each}}
    </div>
</div>