<div class="row">
    <div class="col-md-12">
          <h2>Employees<a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
          <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <td>Employee Num</td>
                        <td>Full Name</td>
                        <td>Email</td>
                        <td>Address</td>
                        <td>Manager ID</td>
                        <td>Status</td>
                        <td>Department</td>
                        <td>Hired On</td>
                    </tr>
                </thead>
            {{#each data}}
                    <tr>
                        <td>{{this.employeeNum}}</td>
                        <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td> 
                        <td><a href="mailto: {{this.email}}">{{this.email}}</a></td>
                        <td>{{this.addressStreet}} {{this.addressState}} {{this.addressPostal}}</td>
                        <td><a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}</a></td>
                        <td><a href="/employees?status={{this.status}}">{{this.status}}</a></td>
                        <td><a href="/employees?department={{this.department}}">{{this.department}}</a></td>
                        <td>{{this.hireDate}}</td>
                        <td><a class="btn btn-danger" href="/employees/delete/{{this.employeeNum}}">remove</a></td>
                    </tr>
            {{/each}}
            </table>
        </div>
    </div>
{{#unless data}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
{{/unless}}